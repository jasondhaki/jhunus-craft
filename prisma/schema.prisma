generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. USERS (Customers & You)
model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique // Matches the ID from Clerk Authentication
  email     String   @unique
  firstName String?
  lastName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  orders    Order[]
  reviews   Review[]
}

// 2. PRODUCTS (The Jute Goods)
model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique // For SEO friendly URLs
  description String
  price       Decimal  @db.Decimal(10, 2)
  salePrice   Decimal? @db.Decimal(10, 2)
  
  // Specific Jute Attributes
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  
  weaveStyle  String?  // e.g., "Braided", "Macrame"
  color       String?  // e.g., "Natural", "Bleached"
  isExport    Boolean  @default(true)
  
  images      String[] // Array of image URLs from Cloudinary
  stock       Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orderItems  OrderItem[]
  reviews     Review[]

  @@index([categoryId])
  @@index([weaveStyle])
}

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  slug     String    @unique
  products Product[]
}

// 3. ORDERS (The Money)
model Order {
  id              String      @id @default(uuid())
  
  // Link to User (Optional for Guest Checkout)
  userId          String?     
  user            User?       @relation(fields: [userId], references: [id])
  
  // Core Order Data
  isPaid          Boolean     @default(false)
  status          OrderStatus @default(PENDING)
  totalAmount     Decimal     @default(0) @db.Decimal(10, 2)
  
  // Customer Details (Snapshot at time of order)
  phone           String      @default("")
  address         String      @default("") // Kept simple as String for MVP
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  orderItems      OrderItem[] // Relation to items bought
}

// Linking table: Which Product is in Which Order
model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  // Save price/qty here so history doesn't change if you change product price later
  quantity  Int     @default(1)
  price     Decimal @default(0) @db.Decimal(10, 2)
}

// 4. WHOLESALE (B2B Leads)
model WholesaleInquiry {
  id              String   @id @default(uuid())
  contactName     String
  companyName     String
  email           String
  country         String
  productInterest String
  estimatedQty    Int
  message         String?
  createdAt       DateTime @default(now())
  status          String   @default("NEW")
}

// 5. SOCIAL PROOF
model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}